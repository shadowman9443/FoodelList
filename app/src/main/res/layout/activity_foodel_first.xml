<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.foodellist.FoodelFirstActivity"
    android:background="@drawable/bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adrsinptrel"
        android:src="@drawable/logo_yourpostcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adrsinptrel"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:id="@+id/linpostcode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/shape">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edtPostcode"
                android:text="Your postcode"
                android:textColor="#FF909090"
                android:fontFamily="sans-serif-light"
                android:background="@color/white"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/yourpostcodeicon"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/relButtons"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/order_shape"
            android:layout_below="@+id/linpostcode"
            android:orientation="horizontal"
            android:weightSum="3" >

            <RelativeLayout
                android:id="@+id/relBoktbl"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"

                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Table"
                    android:id="@+id/txtBokTbl"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/dividerloine"
                android:layout_width="0.5dp"

                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/relOrdTake"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Take Away"
                    android:id="@+id/txtOrderTake"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>
            <View
                android:id="@+id/dividerloinescnd"
                android:layout_width="0.5dp"

                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:background="@color/grey" />
            <RelativeLayout
                android:id="@+id/relOrdTbl"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Order At Table"
                    android:id="@+id/txtOrderTable"
                    android:fontFamily="sans-serif-light"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"/>




            </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/relButtons"
            android:text="@string/find_place"
            android:id="@+id/btnFindPLace"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/shape_button"/>

    </RelativeLayout>


</RelativeLayout>
