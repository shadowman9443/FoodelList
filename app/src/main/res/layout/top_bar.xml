<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    >

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#DDDDDD"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/llhome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/orders" />

            <TextView
                android:id="@+id/txthome"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="0dp"
                android:text="Orders"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tell_a_frnd_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_imagedfs"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/tell_a_friend" />

            <TextView
                android:id="@+id/txthomedsf"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="0dp"
                android:text="Tell a Friend"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llmenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical" >

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/myprofile_gry" />

            <TextView
                android:id="@+id/txtMEnu"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="0dp"
                android:text="Account"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lltellfriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tellafriend_imageview"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/findajob" />

            <TextView
                android:id="@+id/txtctellfriend"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="0dp"
                android:text="Find a job"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


