<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filters"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Filters"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EAEAEA">
        <LinearLayout
            android:id="@+id/relButtons"

            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/order_shape"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="3" >

            <RelativeLayout
                android:id="@+id/relBoktbl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"

                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/txtBokTbl"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/dividerloine"
                android:layout_width="0.5dp"

                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/relOrdTake"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:id="@+id/txtOrderTake"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>
            <View
                android:id="@+id/dividerloinescnd"
                android:layout_width="0.5dp"

                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:background="@color/grey" />
            <RelativeLayout
                android:id="@+id/relOrdTbl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Collection"
                    android:id="@+id/txtOrderTable"
                    android:fontFamily="sans-serif-light"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"/>




            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bike"
            android:id="@+id/txhdeliveryblsheet"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txhdeliveryblsheet"
            android:text="Free Delivery"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"

        android:layout_height="0.5dp"

        android:layout_gravity="center"
        android:background="@color/grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/halal"
            android:id="@+id/txhalalblsheet"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txhalalblsheet"
            android:text="Halal"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"

        android:layout_height="0.5dp"

        android:layout_gravity="center"
        android:background="@color/grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/star"
            android:id="@+id/txOffersAvlblsheet"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txOffersAvlblsheet"
            android:text="Offers Available"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"

        android:layout_height="0.5dp"

        android:layout_gravity="center"
        android:background="@color/grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/chtb"
            android:id="@+id/txOrderTablesheet"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txOrderTablesheet"
            android:text="Order At Table"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"

        android:layout_height="0.5dp"

        android:layout_gravity="center"
        android:background="@color/grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/btnlogin"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_button"
            android:clickable="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="APPLY FILTERS(8) "
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>