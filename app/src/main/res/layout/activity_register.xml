<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#DDDDDD"
        >
        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/grey_radious">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="center"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="80dp"
                    android:background="@color/white"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/grey_radious">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center"/>
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="name@example.com"
                    android:fontFamily="sans-serif-light"
                    android:background="@color/white"
                    android:paddingLeft="80dp"
                    android:textSize="16dp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/grey_radious"
                android:weightSum="3">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    />
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:background="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/grey"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/eye"
                    android:layout_weight="2.1"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/btnlogin"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button"
                android:clickable="true"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="CREATE ACCOUNT"
                android:textColor="@color/white"
                android:textSize="15dp"/>



            <LinearLayout
                android:id="@+id/relButtons"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edtPostcode"
                android:orientation="horizontal"
                android:weightSum="2" >

                <RelativeLayout
                    android:id="@+id/leftYes"
                    android:layout_width="0dp"
                    android:layout_height="35dp"

                    android:layout_weight=".80"
                    android:layout_gravity="center"
                    android:clickable="true"

                    android:orientation="vertical" >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="5dp"

                        android:background="@android:color/darker_gray"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rightNo"
                    android:layout_width="10dp"
                    android:layout_height="35dp"
                    android:layout_weight=".40"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or"
                        android:id="@+id/txtCuisine"
                        android:textSize="15sp"
                        android:textStyle="bold|italic"
                        android:textColor="#BDBDBD"
                        android:layout_centerInParent="true"/>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rightNoll"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".80"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:orientation="vertical" >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="5dp"
                        android:background="@android:color/darker_gray"
                        android:layout_centerInParent="true"/>




                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/radious_button_find_job"
                android:orientation="horizontal"
               >

                <ImageView
                    android:id="@+id/swipe_left"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fbf" />

                <View
                    android:id="@+id/dividerloine"
                    android:layout_width="0.5dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/swipe_left"
                    android:background="#ffffff" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/dividerloine"
                    android:gravity="center"
                    android:text="Continue with Facebook"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </RelativeLayout>
            <!-- Facebook Login Button -->


            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                />

            <!-- Facebook Post to Wall Button com.facebook.login.widget.LoginButton -->
            <TextView
                android:id="@+id/crt_intxt_forgotpin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/creating_ac"
                android:textColor="#FF909090"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/trm_cond_intxt_forgotpin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:gravity="center"
                android:text="@string/trm_cond"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
